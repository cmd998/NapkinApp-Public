<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_single_restaurant"
    tools:context="edu.sfsu.napkin.SingleRestaurant">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/restaurant_image"
        android:contentDescription="displays Yelp image of Restaurant"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Restaurant's Name"
        android:paddingTop ="10dp"
        android:id="@+id/restaurant_name_text_view"
        android:layout_below="@+id/restaurant_image"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:clickable="true"
        android:text="Restaurant's Address"
        android:id="@+id/restaurant_address_text_view"
        android:layout_below="@+id/restaurant_name_text_view"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Restaurant's Phone"
        android:id="@+id/restaurant_phone_text_view"
        android:layout_below="@+id/restaurant_address_text_view"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:id="@+id/rating"
        android:layout_below="@+id/restaurant_phone_text_view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yelp_logo"
        android:src="@drawable/yelp_logo_small"
        android:layout_alignTop="@+id/restaurant_image"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Restaurant's Distance from User"
        android:id="@+id/restaurant_distance_text_view"
        android:layout_below="@+id/restaurant_phone_text_view"
        android:layout_alignParentStart="true" />

</RelativeLayout>
