<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorBg"
    tools:context="edu.sfsu.napkin.activity.Home">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_marginBottom="34dp"
        android:layout_above="@+id/instrImgView"
        android:layout_centerHorizontal="true" />
    <!--    android:layout_marginTop="40dp" /> -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instrImgView"
        android:src="@drawable/stepsimg"
        android:layout_marginBottom="29dp"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Lets Cook!"
        android:textColor="@color/btnText"
        android:id="@+id/button"
        android:onClick="onClickLetsCook"
        android:elevation="2dp"
        android:translationZ="6dp"
        android:padding="4dp"
        android:background="@color/colorPrimary"
        android:textAlignment="center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/loadPrevIngr"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Load Previous Search"
        android:id="@+id/loadPrevIngr"
        android:onClick="onClickLoadPrev"
        android:elevation="2dp"
        android:translationZ="6dp"
        android:padding="4dp"
        android:allowUndo="true"
        android:textAlignment="center"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prevSearchTime_tv"
        android:textStyle="italic"
        android:fontFamily="@android:string/unknownName"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
